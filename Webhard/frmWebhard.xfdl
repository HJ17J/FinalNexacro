      <Dataset id="ds_indir">
        <ColumnInfo>
          <Column id="userID" type="STRING" size="256"/>
          <Column id="name" type="STRING" size="256"/>
          <Column id="isFolder" type="STRING" size="256"/>
          <Column id="dir" type="STRING" size="256"/>
        </ColumnInfo>
      </Dataset>
    </Objects>
    <Script type="xscript5.1"><![CDATA[
this.div_dir_Grid00_oncelldblclick = function(obj:nexacro.Grid,e:nexacro.GridClickEventInfo)
{
	this.ds_indir.deleteAll();
	let addedRow = this.ds_indir.addRow();
	// userID, name, isFolder, dir
	this.ds_indir.setColumn(addedRow, 0, "userA");
	this.ds_indir.setColumn(addedRow, 1, "...");
	this.ds_indir.setColumn(addedRow, 2, "true");
	this.ds_indir.setColumn(addedRow, 3, this.ds_directory.getColumn(e.row, "dirName"));
	
	addedRow = this.ds_indir.addRow();
	this.ds_indir.setColumn(addedRow, 0, "userA");
	this.ds_indir.setColumn(addedRow, 1, "file1");
	this.ds_indir.setColumn(addedRow, 2, "false");
	this.ds_indir.setColumn(addedRow, 3, this.ds_directory.getColumn(e.row, "dirName"));
};
]]></Script>
