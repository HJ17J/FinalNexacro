            <Layout>
              <Grid id="Grid00" taborder="0" left="0" top="0" width="192" height="650" binddataset="ds_directory" treeusecheckbox="false" autofittype="col" oncelldblclick="div_dir_Grid00_oncelldblclick">
                <Formats>
                  <Format id="default">
                    <Columns>
                      <Column size="80"/>
                    </Columns>
                    <Rows>
                      <Row size="24"/>
                    </Rows>
                    <Band id="body">
                      <Cell text="bind:dirName" displaytype="treeitemcontrol" treelevel="bind:level" edittype="tree"/>
                    </Band>
                  </Format>
                </Formats>
              </Grid>
            </Layout>
          </Layouts>
        </Div>
        <Div id="div_file" taborder="1" left="190" top="0" width="900" height="650" text="">
          <Layouts>
            <Layout>
              <Grid id="Grid00" taborder="0" left="19" top="80" width="861" height="300" binddataset="ds_indir">
                <Formats>
                  <Format id="default">
                    <Columns>
                      <Column size="80"/>
