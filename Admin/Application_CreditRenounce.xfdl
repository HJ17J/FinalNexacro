<?xml version="1.0" encoding="utf-8"?>
<FDL version="2.1">
  <Form id="Application_Renounce" width="1090" height="650" titletext="New Form">
    <Layouts>
      <Layout height="650" mobileorientation="landscape" width="1090">
        <Static id="Static00" taborder="0" text="학점포기신청 목록" left="11" top="22" width="160" height="16" cssclass="sta_WF_title01"/>
        <Grid id="grd_apply" taborder="1" left="10" top="70" width="520" height="550" binddataset="ds_apply" autofittype="col" fillareatype="linerow">
          <Formats>
            <Format id="default">
              <Columns>
                <Column size="30"/>
                <Column size="120"/>
                <Column size="40"/>
                <Column size="40"/>
              </Columns>
              <Rows>
                <Row size="26" band="head"/>
                <Row size="24"/>
              </Rows>
              <Band id="head">
                <Cell text="번호"/>
                <Cell col="1" text="제목"/>
                <Cell col="2" text="신청자"/>
                <Cell col="3" text="신청일"/>
              </Band>
              <Band id="body">
                <Cell text="bind:seq" displaytype="text"/>
                <Cell col="1" text="bind:title"/>
                <Cell col="2" text="bind:name"/>
                <Cell col="3" text="bind:apply_date" displaytype="date" calendardateformat="yyyy.MM.dd"/>
              </Band>
            </Format>
          </Formats>
        </Grid>
        <Radio id="rdo_approval" taborder="2" left="360" top="38" width="188" height="24" innerdataset="innerdataset" codecolumn="codecolumn" datacolumn="datacolumn" columncount="3" onitemchanged="rdo_approval_onitemchanged" index="0" text="미승인" value="0">
          <Dataset id="innerdataset">
            <ColumnInfo>
              <Column id="codecolumn" size="256"/>
              <Column id="datacolumn" size="256"/>
            </ColumnInfo>
            <Rows>
              <Row>
                <Col id="datacolumn">미처리</Col>
                <Col id="codecolumn">0</Col>
              </Row>
              <Row>
                <Col id="codecolumn">1</Col>
                <Col id="datacolumn">처리</Col>
              </Row>
              <Row>
                <Col id="datacolumn">반려</Col>
                <Col id="codecolumn">-1</Col>
              </Row>
            </Rows>
          </Dataset>
        </Radio>
        <Div id="div_application" taborder="3" left="550" top="70" width="530" height="550" border="1px solid gray">
          <Layouts>
            <Layout/>
          </Layouts>
        </Div>
        <Static id="Static01" taborder="4" left="0" height="30" width="1090" bottom="0"/>
      </Layout>
    </Layouts>
    <Objects>
      <Dataset id="ds_creditrenounce">
        <ColumnInfo>
          <Column id="seq" type="STRING" size="256"/>
          <Column id="id" type="STRING" size="256"/>
          <Column id="renounceSubject" type="STRING" size="256"/>
          <Column id="Column3" type="STRING" size="256"/>
          <Column id="Column4" type="STRING" size="256"/>
        </ColumnInfo>
      </Dataset>
      <Dataset id="ds_mail">
        <ColumnInfo>
          <Column id="mail_seq" type="INT" size="256"/>
          <Column id="receiver" type="STRING" size="256"/>
          <Column id="title" type="STRING" size="256"/>
          <Column id="contents" type="STRING" size="256"/>
          <Column id="received_date" type="DATE" size="256"/>
        </ColumnInfo>
      </Dataset>
    </Objects>
    <Script type="xscript5.1"><![CDATA[
// 폼 로드 시
this.Application_CreditRenounce_onload = function(obj:nexacro.Form,e:nexacro.LoadEventInfo)
{
	this.transaction(
		"getApplication"	// 1. strSvcID(string 형태의 id)
		, "/getApplication.nex"	// 2. strURL(string 형태의 url)
		, ""	// 3. strInDatasets Sds=Fds:U, :A, :N
		, "ds_apply=out_apply"	// 4. strOutDatasets -select Fds=Sds
		, "" // 5. strArgument
		, "fn_callback_onload"	// 6. strCallbackFunc
	);
};

this.fn_callback_onload = function(id, errCD, errMSG)
{
	if(errCD<0){
		this.alert("데이터를 가져오지 못했습니다.");
	}else {
		this.ds_apply.filter("approval=='0'");
	}
}


// 처리여부 필터링
this.rdo_approval_onitemchanged = function(obj:nexacro.Radio,e:nexacro.ItemChangeEventInfo)
{
	let approval = this.rdo_approval.value;
	this.ds_apply.filter("approval=="+approval);
};


// 처리
this.div_application_btn_approval_onclick = function(obj:nexacro.Button,e:nexacro.ClickEventInfo)
{
	this.fn_notifyResult("approve");
};


// 반려
this.div_application_btn_reject_onclick = function(obj:nexacro.Button,e:nexacro.ClickEventInfo)
{
	this.fn_notifyResult("reject");
};


// 메일 전송 팝업창
this.fn_notifyResult = function(msg)
{
	let sId = this.ds_apply.getColumn(this.ds_apply.rowposition, "applicant");
	let objCF = new ChildFrame();
	objCF.init("notifyResult",(this.width-300)/2, (this.height-450)/2, 300, 450, null, null, "Admin::Application_Result.xfdl");
		
	if(msg=="approve"){
		objCF.showModal(this.getOwnerFrame(),{receiver:sId, msg:msg},this,"fn_approved");
	}else if(msg=="reject"){
		objCF.showModal(this.getOwnerFrame(),{receiver:sId, msg:msg},this,"fn_reject");
	}else{
		this.alert("쪽지를 보낼 수 없습니다.");
	}
}

this.fn_approved = function(id, objReturn)
{
	let nRow = this.ds_apply.rowposition;
	
	if(objReturn){
		let mail = JSON.parse(objReturn);
		this.ds_mail.addRow();	
		this.ds_mail.setColumn(0,"title",mail.title);
		this.ds_mail.setColumn(0,"receiver",mail.receiver);
		this.ds_mail.setColumn(0,"contents",mail.contents);
		
		this.ds_apply.setColumn(nRow,"approval",1);
		
		this.transaction(
			"appApproved"	// 1. strSvcID(string 형태의 id)
			, "/appApproved.nex"	// 2. strURL(string 형태의 url)
			, "in_apply=ds_apply:U in_mail=ds_mail:U"	// 3. strInDatasets Sds=Fds:U, :A, :N
			, ""	// 4. strOutDatasets -select Fds=Sds
			, "" // 5. strArgument
			, "fn_callback_save"	// 6. strCallbackFunc
		);
	}else {return;}
}

this.fn_reject = function(id, objReturn)
{
	let nRow = this.ds_apply.rowposition;
	
	if(objReturn){
		let mail = JSON.parse(objReturn);
		this.ds_mail.addRow();	
		this.ds_mail.setColumn(0,"title",mail.title);
		this.ds_mail.setColumn(0,"receiver",mail.receiver);
		this.ds_mail.setColumn(0,"contents",mail.contents);
		
		this.ds_apply.setColumn(nRow,"approval",-1);
		
		this.transaction(
			"appRejected"	// 1. strSvcID(string 형태의 id)
			, "/appRejected.nex"	// 2. strURL(string 형태의 url)
			, "in_apply=ds_apply:U in_mail=ds_mail:U"	// 3. strInDatasets Sds=Fds:U, :A, :N
			, ""	// 4. strOutDatasets -select Fds=Sds
			, "" // 5. strArgument
			, "fn_callback_save"	// 6. strCallbackFunc
		);
	}else {return;}
}


this.fn_callback_save = function(id,errCD,errMSG)
{
	if(errCD<0){
		this.alert("처리하지 못했습니다.");
	}else{
		if(id=="appApproved"){
			this.alert("처리되었습니다.");
		}else if(id=="appRejected"){
			this.alert("반려되었습니다");
		}
	}
	this.reload();
}


]]></Script>
  </Form>
</FDL>
